          </ul>
          <ul class="nav navbar-nav navbar-right">
            <li><a href="{{ path('fos_user_security_logout') }}"><i class="fa fa-external-link-square"></i> Salir</a></li>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>

    <div class="container">
      {% block contenido %}{% endblock %}
    </div><!-- /.container -->

    {% block js_pie %}{% endblock %}

  </body>
</html>