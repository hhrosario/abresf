{% extends '[[[bundleName]]]:Admin:base.html.twig' %}

{% block breadcrumbs %}
  <li><a href="#">[[[appName]]]</a> <span class="divider">/</span></li>
  <li><a href="{{ path('[[[entityName]]]') }}">[[[entityNameCaps]]]</a> <span class="divider">/</span></li>
  <li class="active">Editar</li>
{% endblock %}

{% block contenido %}
<form action="{{ path('[[[entityName]]]_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }} class="form-stacked">
    <fieldset>
      {{ form_widget(edit_form) }}
    </fieldset>
    <div class="actions">
      <input type="submit" class="btn primary" value="Guardar" />
    </div>
</form>
<form action="{{ path('[[[entityName]]]_delete', { 'id': entity.id }) }}" method="post">
    {{ form_widget(delete_form) }}
    <button type="submit" class="btn danger">Eliminar</button>
</form>
{% endblock %}