{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}

<h1>Inicie Sesión</h1>

<div class="well">

	{% if error %}
	    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
	{% endif %}

	<form action="{{ path("fos_user_security_check") }}" method="post" class="form-stacked form">
	    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

	    <label for="username">Usuario:</label><br>
	    <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" /><br>

	    <label for="password">Contraseña</label><br>
	    <input type="password" id="password" name="_password" required="required" /><br>

	    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
	    <label for="remember_me">Recordarme</label><br>

	    <input type="submit" id="_submit" name="_submit" value="Iniciar Sesión" class="btn btn-primary" />
	</form>
	
</div>
{% endblock fos_user_content %}